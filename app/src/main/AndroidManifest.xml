<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.cookin.app">

    <!-- To auto-complete the email text field in the com.cookin.login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <!-- To auto-complete the email text field in the com.cookin.login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:name="com.cookin.main.Application"
        android:allowBackup="true"
        android:icon="@mipmap/alpha_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

        <activity
            android:name="com.cookin.main.MainAct"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:parentActivityName="com.cookin.main.MainAct"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.cookin.host.create.HostCreateDinner"
            android:configChanges="orientation"
            android:label="@string/title_activity_host_create_dinner"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.cookin.host.HostViewDetailed"
            android:configChanges="orientation"
            android:label="@string/title_activity_host_view_detailed"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.cookin.login.LoginAct"
            android:configChanges="orientation"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>

        <activity android:name="com.amazonaws.mobilehelper.auth.signin.ui.SignInActivity" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="e43cdfc1ea6c2101b0ee8c776e0a0239ed11fc0e"/>

        <activity
            android:name="com.cookin.main.SplashAct"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:label="CookIn"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>