<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_main</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/AppTheme.TextAppearance.Academy</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.TextAppearance"/>

    <style name="AppTheme.TextAppearance.Academy">
        <item name="fontPath">fonts/Academy-Sans.ttf</item>
    </style>

    <style name="AppTheme.TextAppearance.Academy.Bold">
        <item name="fontPath">fonts/Academy-Sans-Bold.ttf</item>
    </style>
    <style name="AppTheme.TextAppearance.Academy.Bold.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="AppTheme.TextAppearance.Academy.BoldItalic">
        <item name="fontPath">fonts/Academy-Sans-BoldItalic.ttf</item>
    </style>

    <style name="AppTheme.TextAppearance.Academy.DemiBold">
        <item name="fontPath">fonts/Academy-Sans-DemiBold.tff</item>
    </style>

    <style name="AppTheme.TextAppearance.Academy.Light">
        <item name="fontPath">fonts/Academy-Sans-Light.tff</item>
    </style>

    <style name="AppTheme.TextAppearance.Academy.LightItalic">
        <item name="fontPath">fonts/Academy-Sans-LightItalic.tff</item>
    </style>

    <style name="AppTheme.TextAppearance.Academy.Thin">
        <item name="fontPath">fonts/Academy-Sans-Thin.tff</item>
    </style>

    <style name="AppTheme.TextAppearance.Academy.ThinItalic">
        <item name="fontPath">fonts/Academy-Sans-ThinItalic.tff</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
