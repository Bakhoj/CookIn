<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/dinner_profil_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/dinner_viewholder_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="20dp"
        android:layout_alignParentEnd="false"
        android:layout_toEndOf="@id/dinner_profil_pic"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/dinner_viewholder_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2800 Lyngby"
        android:textSize="14dp"
        android:layout_toRightOf="@id/dinner_profil_pic"
        android:layout_below="@id/dinner_viewholder_title"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/dinner_viewholder_pricetag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50kr"
        android:textSize="14dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/dinner_viewholder_title"
        android:paddingRight="30dp" />

    <TextView
        android:id="@+id/dinner_viewholder_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="Description"
        android:layout_below="@+id/dinner_profil_pic"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:paddingBottom="10dp"/>

    <View android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@id/dinner_viewholder_description" />
</RelativeLayout>
